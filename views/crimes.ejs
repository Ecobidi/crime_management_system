<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title text-white">Crimes</h3>
      <div>
        <a href="/crimes/new" class="btn btn-success">Add Crime</a>
      </div>
    </div> 
  </div>

  <div class="row">
    <div class="col-12">
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Crimes</h4>
      <table class="table table-bordered table-striped text-white">
        <thead class="font-weight-bold">
          <tr>
            <td>Description</td>
            <td>Officer Name</td>
            <td>Suspect Name</td>
            <td>Complainer Name</td>
            <td>Complainer Phone</td>
            <td>Witness Name</td>
            <td></td>
          </tr>
        </thead>
        <tbody>
          <% crimes.forEach((m) => { %>
            <tr>
              <td><%= m.description %></td>
              <td><%= m.officer_name %></td>
              <td><%= m.suspect_name %></td>
              <td><%= m.complainer_name %></td>
              <td><%= m.complainer_phone %></td>
              <td><%= m.witness_name %></td>
              <td>
                <a href='<%= "/crimes/remove/" + m._id %>' class="btn btn-sm btn-danger">Remove</a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>

</div>
  

<%- include ('partials/bottom') %>