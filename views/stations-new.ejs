<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12">
    <form action="/stations/new" method="POST">
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>

      <fieldset class="border p-2 rounded row text-white">
        <legend>Station Details</legend>
        <div class="form-group col-md-6">
          <label>Station Name: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="station_name">
        </div>
        <div class="form-group col-md-6">
          <label>Location: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="location">
        </div>
        <div class="form-group col-md-6">
          <label>City: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="city">
        </div>
        <div class="form-group col-md-6">
          <label>Office Telephone: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="phone">
        </div>
        <div class="form-group col-md-6">
          <label>Station Head: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="station_head">
        </div>
        <div class="form-group col-md-6">
          <label>Remarks: <strong class="text-danger">*</strong></label>
          <textarea class="form-control" name="remarks"></textarea>
        </div>
      </fieldset>

      <div class="form-group mt-4">
        <button class="btn btn-success form-control" type="submit">Add Station</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>