<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title text-white">Officers</h3>
      <div>
        <a href="/officers/new" class="btn btn-success">Add New Officer</a>
      </div>
    </div> 
  </div>

  <div class="row">
    <div class="col-12">
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Police Officers</h4>
      <table class="table table-bordered table-striped text-white">
        <thead class="font-weight-bold">
          <tr>
            <td>Officer ID</td>
            <td>Photo</td>
            <td>Service Number</td>
            <td>Surname</td>
            <td>Other Names</td>
            <td>Rank</td>
            <td>Phone</td>
            <td>Gender</td>
            <td>Actions</td>
          </tr>
        </thead>
        <tbody>
          <% officers.forEach((m) => { %>
            <tr>
              <td><small><%= m._id %></small></td>
              <td style="width: 100px">
                <img class="table-thumbnail" src='<%= "/images/" + m.photo  %>'>
              </td>
              <td><small><%= m.service_number %></small></td>
              <td><small><%= m.surname %></small></td>
              <td><small><%= m.other_names %></small></td>
              <td><small><%= m.rank %></small></td>
              <td><small><%= m.phone %></small></td>
              <td><small><%= m.gender %></small></td>
              <td>
                <a href='<%= "/officers/remove/" + m._id %>' class="btn btn-sm btn-danger"><i class="fa fa-recycle" aria-hidden="true"></i></a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>

</div>
  

<%- include ('partials/bottom') %>