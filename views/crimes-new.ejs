<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12 d-flex justify-content-between align-items-center underline pb-2 mb-4">
    <h3 class="title text-white text-center">Add Crime Report</h3>
  </div>
  <div class="col-12">
    <form action="/crimes/new" method="POST" enctype="multipart/form-data">
      <div>
        <% if (error_msg && error_msg.length > 0) { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= error_msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% } %>
      </div>

      <fieldset class="border p-2 rounded row text-white">
        <legend>Crime Details</legend>
        <div class="form-group col-md-6">
          <label>Description: <strong class="text-danger">*</strong></label>
          <textarea class="form-control" name="description"></textarea>
        </div>
        
        <div class="form-group col-md-3">
          <label>Reporting Officer Name: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="officer_name">
        </div>

        <div class="form-group col-md-3">
          <label>Reporting Officer ID: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="officer_id">
        </div>

        <div class="form-group col-md-3">
          <label>Suspect Name: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="suspect_name">
        </div>

        <div class="form-group col-md-3">
          <label>Suspect ID: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="suspect_id">
        </div>

        <div class="form-group col-md-3">
          <label>Complainer Name: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="complainer_name">
        </div>

        <div class="form-group col-md-3">
          <label>Complainer Phone: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="complainer_phone">
        </div>

        <div class="form-group col-md-3">
          <label>Witness(es): <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="witness_name">
        </div>

        <div class="form-group col-md-3">
          <label>Witness(es) Phone: <strong class="text-danger">*</strong></label>
          <input type="text" class="form-control" name="witness_phone">
        </div>

        <div class="form-group col-md-3">
          <label>Date of Offense: <strong class="text-danger">*</strong></label>
          <input type="date" class="form-control" name="date_of_offence">
        </div>

        <div class="form-group col-md-3">
          <label>Date Reported: <strong class="text-danger">*</strong></label>
          <input type="date" class="form-control" name="date_of_report">
        </div>

        <div class="form-group col-md-3">
          <label>Case Status: <strong class="text-danger">*</strong></label>
          <select name="case_status" class="form-control">
            <option name="unsolved">Unsolved</option>
            <option name="solved">Solved</option>
          </select>
        </div>

        <div class="form-group col-md-4">
          <label>Upload Pictorial Evidence: </label>
          <input type="file" multiple accept="image/jpg, image/jpeg, image/png">
        </div>
        
      </fieldset>
      <div class="form-group mt-4">
        <button class="btn btn-success form-control" type="submit">Proceed to Add Crime Report</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>