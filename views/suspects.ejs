<%- include ('partials/top') %>
  <div class="row space">
    <div class="col-12 d-flex justify-content-between align-items-center underline pb-2">
      <h3 class="title text-white">Suspects</h3>
      <div>
        <a href="/suspects/new" class="btn btn-success">Enter New Suspect</a>
      </div>
    </div>
  </div>

  <div class="row space">
    
    <div class="col-12">
      <form id="search-form" method="GET" action="/suspects?" class="form-inline">
        <div class="form-group mb-4">
          <input required type="text" name="search" id="search-box" class="form-control" placeholder="Search by suspect name...">
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </form>
      <h4 class="font-weight-light text-center text-white bg-primary p-2 m-0 table-top">List of Suspects</h4>
      <table class="table table-bordered table-striped">
        <thead class="text-white font-weight-bold">
          <tr>
            <td>Photo</td>
            <td>Surname</td>
            <td>Other Names</td>
            <td>Gender</td>
            <td>Address</td>
            <td>Phone</td>
            <td>Age</td>
            <td>Height (cm.)</td>
            <td>Weight (cm.)</td>
            <td>Remarks</td>
            <td></td>
          </tr>
        </thead>
        <tbody class="text-white">
          <% suspects.forEach((m) => { %>
            <tr>
              <td>
                <img class="table-thumbnail" src='<%= "/images/" + m.photo  %>'>
              </td>
              <td><small><%= m.surname %></small></td>
              <td><small><%= m.other_names %></small></td>
              <td><small><%= m.gender %></small></td>
              <td><small><%= m.address %></small></td>
              <td><small><%= m.phone %></small></td>
              <td><small><%= m.age %></small></td>
              <td><small><%= m.height %></small></td>
              <td><small><%= m.weight %></small></td>
              <td><small><%= m.remarks %></small></td>
              <td>
                <a href='<%= "/suspects/remove/" + m._id %>' class="btn btn-sm btn-danger"><i class="fa fa-recycle" aria-hidden="true"></i></a>
              </td>
            </tr>
          <% }) %>          
        </tbody>
      </table>
    </div>
  </div>
</main>
</div>
</div> 

<%- include ('partials/bottom') %>