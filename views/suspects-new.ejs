<%-include ("partials/top") %>
<div class="row space">
  <div class="col-12 d-flex justify-content-between align-items-center underline pb-2 mb-4">
    <h3 class="title text-white text-center">Add Suspect</h3>
  </div>
  <div class="col-12">
    <form action="/suspects/new" method="POST" enctype="multipart/form-data">
      <div>
        <% errors.forEach(err => { %>
          <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <strong><%= err.msg %></strong> 
          </div>
          <script>
            $(".alert").alert();
          </script>
        <% }) %>
      </div> 

      <fieldset class="border p-2 rounded row text-white">
        <legend>Suspect's Details</legend>
        <div class="form-group col-md-3">
          <label>Surname: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="surname">
        </div>
        <div class="form-group col-md-6">
          <label>Other Names: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="other_names">
        </div>
        <div class="form-group col-md-4">
          <label>Gender: <strong class="text-danger">*</strong></label>
          <select name="gender" required class="form-control">
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>
        <div class="form-group col-md-4">
          <label>Age: <strong class="text-danger">*</strong></label>
          <input required type="number" class="form-control" name="age">
        </div>
        <div class="form-group col-md-4">
          <label>Residential Address: <strong class="text-danger">*</strong></label>
          <input required type="text" class="form-control" name="address">
        </div>
        <div class="form-group col-md-4">
          <label>Mobile Phone: <strong class="text-danger">*</strong></label>
          <input required type="tel" class="form-control" name="phone">
        </div>
        <div class="form-group col-md-4">
          <label>Height (centimeter): <strong class="text-danger">*</strong></label>
          <input required type="number" class="form-control" name="height">
        </div>
        <div class="form-group col-md-4">
          <label>Weight (kilogram): <strong class="text-danger">*</strong></label>
          <input required type="number" class="form-control" name="weight">
        </div>
        <div class="form-group col-md-4">
          <label>Suspect's Photo: </label>
          <input type="file" name="photo" class="form-control">
        </div>
        <div class="form-group col-md-8">
          <label>Remarks: <strong class="text-danger">*</strong></label>
          <textarea class="form-control" name="remarks"></textarea>
        </>
      </fieldset>
    
      <div class="form-group mt-4">
        <button class="btn btn-success form-control" type="submit">Add Suspect</button>
      </div>
    </form>
  </div>
</div>

</main>

<%-include ("partials/bottom") %>